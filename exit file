(venv) user_h@Sanjays-MacBook-Pro workflows % cat pr-create.yml 
name: PR Preview Create

on:
  pull_request:
    types: [opened, reopened]

jobs:
  create:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1

      - name: Create EC2
        run: |
          bash pr-preview/scripts/create-ec2.sh ${{ github.event.pull_request.number }}
(venv) user_h@Sanjays-MacBook-Pro workflows % cat pr-delete.yml 
name: PR Preview Destroy

on:
  pull_request:
    types: [closed]

jobs:
  destroy:
    if: github.event.pull_request.merged == true
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1

      - name: Destroy EC2
        run: |
          bash pr-preview/scripts/destroy-ec2.sh ${{ github.event.pull_request.number }}
